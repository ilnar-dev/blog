<%- include('header'); %>

    <main role="main">
        <div class="row">
            <h1 class="col-md-12">Software engineering blog</h1>
        </div>
        <% articles.forEach(function(article) { %>
            <div class="row top30">
                <div class="col-md-2">
                    <p><%=article.publishedOn.toLocaleDateString()%></p>
                </div>
                <div class="col-md-10">
                    <h2><%=article.title%></h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <% if (article.mainImage) { %>
                        <div>
                            <img 
                              class="img-thumbnail" 
                              src="/uploads/<%= article.mainImage.fileName %>" 
                              alt="main image" 
                              class="img-thumbnail"
                              >
                        </div>
                    <% } %>
                </div>
                <div class="col-md-10">
                    <%-article.text%>
                </div>
            </div>
            <hr>
        <% }) %>
    </main>

<!-- Modal -->
<div class="modal fade" id="imagemodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">              
      <div class="modal-body">
      	<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <img src="" class="imagepreview" style="width: 100%;" >
      </div>
    </div>
  </div>
</div>

<%- include('footer'); %>
